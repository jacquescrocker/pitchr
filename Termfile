setup do
  run "bundle install"
end

tab "Server" do
  run "bundle exec thin start -D"
  # run "bundle exec rails s thin --debugger"
end

tab "Console" do
  run "bundle exec rails console"
end

tab "Assets" do
  run "bundle exec guard -g assets"
end

